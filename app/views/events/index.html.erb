<% @page_title = "All Events" %>

<h2>Events</h2>

<p>
    <%= render_add_record_button("Add Event", new_event_path) %>
</p>

<div class="table-responsive">
    <table class="table table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
            <th scope="col">Event Name</th>
            <th scope="col">Year</th>
            <th scope="col">Details</th>
            </tr>
        </thead>
        <tbody>
            <% @events.each do |event| %>
                <tr>
                    <th scope="row"><%= link_to event.name, event_path(event) %></th>
                    <td><%= event.year %></td>
                    <td><%= link_to "Details", event_path(event), :class => 'btn btn-secondary' %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>

<% if @events.blank? %>
  <h4>There are no events yet.</h4>
<% end %>
