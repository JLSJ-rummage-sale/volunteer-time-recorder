
<div class="events delete">
    <h1>Delete Event?</h1>

    <%= form_for(@event, :method => 'delete') do |form| %>

        <p>Are you sure you want to permanently delete this event record?</p>

        <p class="reference-name"><%= @event.name %></p>

        <div class="form-buttons">
            <%= form.submit("Delete Event", {:class => 'btn btn-danger'}) %>
        </div>

    <% end %>
</div>