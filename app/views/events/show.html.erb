<% @page_title = "View Event" %>

<h5><span class="fas fa-calendar-week"></span> Event Record</h5>

<p>
    <%#= link_to "View All Events", events_path, :class => 'btn btn-light' %>
    <%= link_to(events_path, :class => 'btn btn-light') do %>
        <span class="fas fa-angle-left"></span> View All Events
    <% end %>
</p>

<div class="card">
  <div style="padding: 8px" class="card-header">
    <h2><%= event_title(@event) %></h2>
  </div>
  <div style="padding: 2px" class="card-body">
    <%= render(:partial => 'info_table') %>
  </div>
  <div style="padding: 8px" class="card-footer">
    <div class="row">
      <div class="col-6">
        <%= link_to "Edit", edit_event_path(@event), :class => 'btn btn-primary btn-block' %>
      </div>
      <div class="col-6">
        <%= link_to("Delete", delete_event_path(@event), :class => 'btn btn-danger btn-block') %>
      </div>
    </div>
  </div>
</div>

<br>

<p>
    <%= link_to "View Event Time Records", time_records_path(:event_id => @event.id), :class => 'btn btn-info btn-block' %>
</p>
