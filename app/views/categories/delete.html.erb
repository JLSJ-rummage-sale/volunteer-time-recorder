<% @page_title = "Delete Category" %>

<div class="categories delete">
    <h1>Delete Category?</h1>

    <%= form_for(@category, :method => 'delete') do |form| %>

        <p>Are you sure you want to permanently delete this category record?</p>

        <p>This will delete all Time Records for this category.</p>

        <p class="reference-name"><%= @category.name %></p>

        <div class="form-buttons">
            <%= form.submit("Delete Category", {:class => 'btn btn-danger'}) %>
        </div>

    <% end %>
</div>
