<% @page_title = "View Member Type" %>

<h5>Member Type Record</h5>

<p>
    <%= link_to "View All Member Types", member_types_path, :class => 'btn btn-light' %>
</p>

<h2><%= @member_type.name %></h2>

<br>

<div>
    <table class="table table-sm">
        <thead class="thead-light">
            <tr>
            <th scope="col">Member Type Info</th>
            <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">Member Type Name:</th>
                <td><%= @member_type.name %></td>
            </tr>
            <tr>
                <th scope="row">Quota Hours:</th>
                <td><%= @member_type.quota_hours %></td>
            </tr>
        </tbody>
    </table>
</div>

<div>
    <table class="table table-sm">
        <thead class="thead-light">
            <tr>
            <th scope="col">Details</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><%= @member_type.details %></td>
            </tr>
        </tbody>
    </table>
</div>

<%= link_to "Edit", edit_member_type_path(@member_type), :class => 'btn btn-primary' %>

<%= link_to("Delete", delete_member_type_path(@member_type), :class => 'btn btn-danger') %>

