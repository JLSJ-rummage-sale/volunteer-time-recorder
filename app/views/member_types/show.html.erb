<% @page_title = "View Member Type" %>

<h5>Member Type Record</h5>

<p>
    <%= link_to "View All Member Types", member_types_path, :class => 'btn btn-light' %>
</p>

<div class="card">
  <div style="padding: 8px" class="card-header">
    <h2><%= @member_type.name %></h2>
  </div>
  <div style="padding: 2px" class="card-body">
    <%= render(:partial => 'info_table') %>
  </div>
  <div style="padding: 8px" class="card-footer">
    <div class="row">
      <div class="col-6">
        <%= link_to "Edit", edit_member_type_path(@member_type), :class => 'btn btn-primary btn-block' %>
      </div>
      <div class="col-6">
        <%= link_to("Delete", delete_member_type_path(@member_type), :class => 'btn btn-danger btn-block') %>
      </div>
    </div>
  </div>
</div>

<br>

<div>
  <%= link_to "View Volunteers with this Member Type", volunteers_path(:member_type => @member_type.id), :class => 'btn btn-info btn-block' %>
</div>
